@model ExamenArbeteEC.Models.Category

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Index</h2>*@

<div class="row">
    <div class="col-xs-12 col-md-3">
        <ul class="nav nav-pills nav-stacked">
            @if (Model.Name == "Computers")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/1">Computers</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/1">Computers</a>
                </li>
            }
            @if (Model.Name == "Mobiles")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/2">Mobiles</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/2">Mobiles</a>
                </li>
            }
            @if (Model.Name == "TV")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/3">TV</a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/3">TV</a>
                </li>
            }
            @if (Model.Name == "Photo & Video")
            {
                <li class="active">
                    <a href="~/StoreFront/Index/4">Photo &amp; Video </a>
                </li>
            }
            else
            {
                <li>
                    <a href="~/StoreFront/Index/4">Photo &amp; Video</a>
                </li>
            }

        </ul>
    </div>
    <div class="col-xs-12 col-md-9">
        <div class="row">
            @foreach (var product in Model.Products)
            {
                <div class="col-xs-12 col-md-3">
                    <div class="thumbnail">
                        <img class="img-responsive" src="@Url.Content(product.imageURL)">
                        <div class="caption text-center">
                            <p>
                                <b>Name:</b> <span>@product.Name</span>
                            </p>
                            <p>
                                <b>Price:</b> <span>@product.Price USD</span>
                            </p>
                            @*<p>
                                <b>Description</b> <span>@product.Description USD</span>
                            </p>*@
                            <p class="text-center">
                                @Html.ActionLink("Add to cart", "AddToCart", "ShoppingCart", new { id = product.Id }, new { @class = "btn btn-info" })
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>